<!DOCTYPE html>
<html>
<%- include("./partials/head", {title:'Krak Miami - Consultas'})  %>

<body>
  <!-- Navbar -->
  <%- include("./partials/navbar") %>

  <!-- Lista de Consultas -->
  <main class="consultas-box">
    <div class="container-sm">
      <div class="titulo-consultas">
        <h2>Consultas</h2>
        <small><%= data.length %> Mensajes sin leer<small>
      </div>

      <table>
        <tr class="th">
          <th>id</th>
          <th>Nombre</th>
          <th>Email</th>
          <th>Telefono</th>
          <th>Fecha</th>
          <th>Mensaje</th>
          <th> ✔️ </th>
          <th> ❌ </th>
        </tr>

        <% for (i=0 ; i < data.length ; i++) { %>
        <tr>
          <td><%= data[i].id %></td>
          <td><%= data[i].Nombre %></td>
          <td><%= data[i].Email %></td>
          <td><%= data[i].Telefono %></td>
          <td><%= data[i].created_at %></td>
          <td> <%= data[i].Contenido %></td>
          <td>
            <input type="checkbox">
          </td>
          <td>
            <form action="/borrar/<%= data[i].id %>?_method=DELETE" method="POST">
              <button class="delete" type="submit" name="delete">❌</button>
            </form>
          </td>
        </tr>
        <% } %>

      </table>



      <!--Display the links to the pages-->
      <div class="paginado">
      <% if(page > 1) { %> <a class="button btn-pag" href="?page=<%=page-1%>">Anterior</a> <% } %>

      <% for(let i = iterator; i <= endingLink; i++) { %>

      <a class="selectedLink button btn-pag" href="?page=<%=i%>"><%=i%></a>
      <% continue; %>

      <a class="button btn-pag" href="?page=<%=i%>"><%=i%></a>
      <% } %>

      <% if(page < numberOfPages) { %> <a class="button btn-pag" href="?page=<%=page+1%>">Siguiente</a> <% } %>
      </div>




    </div>
  </main>
  <!-- Footer -->
  <%- include("./partials/footer") %>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  <script src="../javascripts/index.js"></script>
</body>

</html>
